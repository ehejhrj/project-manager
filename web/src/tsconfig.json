{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "module": "esnext",
    "target": "ES2017",
    "baseUrl": ".",
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "app/*": [
        "./app/*"
      ]
    }
  }
}