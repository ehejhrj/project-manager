{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "CommonJS",
    "downlevelIteration": true,
    "target": "ES2015",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "esnext"
    ],
    "sourceMap": false,
    "outDir": "dist"
  },
  "exclude": [
    "packages",
  ]
}